@using HelpDeskTicketing.Data.ViewModels;

@model TicketVM

@{

    ViewData["Title"] = "Add new Ticket";

}

<div class="row">
    <div class="col-md-4 offset-4" style="padding-top:50px;">
        <h3 class="text-center"> Add new ticket</h3>
    </div>

    <div class="col-md-10 offset-1">
        <form asp-action="AddTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">

                <div class="col-md-4">
                    <div class="form-group" style="padding:5px;">
                        <label class="control-label" asp-for="Title"></label>
                        <input class="form-control" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="padding:5px;">
                        <label class="control-label" asp-for="DomainId"> </label>
                        <select class="form-control" asp-for="DomainId" asp-items="@ViewBag.Domains">
                            <option value="">Select an option</option>
                        </select>
                        <span asp-validation-for="DomainId" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="padding:5px;">
                        <label class="control-label" asp-for="PriorityId"> </label>
                        <select class="form-control" asp-for="PriorityId" asp-items="@ViewBag.Priorities"></select>
                        <span asp-validation-for="PriorityId" class="text-danger"></span>
                    </div>

                    <div class=" from-group" style="padding:5px;">
                        <label class="control-label" asp-for="Branch"></label>
                        <input type="text" disabled class="form-control" asp-for="Branch" value="@Model.Branch.Name"/>
                        <span asp-validation-for="Branch" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-8">
                    <div class="form-group" style="padding:5px;">
                        <label class="control-label" asp-for="Description"></label>
                        <textarea class="form-control" style="resize:none;" asp-for="Description" rows="10"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="form-group text-center" style="margin-top:7px;">
                <a class="btn btn-outline-secondary" asp-action="GetAllTickets"> Cancel </a>
                <input type="submit" class="btn btn-outline-success" style="margin-left:15px;" 
                        asp-action="addTicket" value="Add Ticket"/>
            </div>

        </form>
    </div>
</div>


