@using HelpDeskTicketing.Data.ViewModels;

@model ResetPasswordVM

@{

    ViewData["Title"] = "Reset Password";

}

<div class="row" style="margin-top:150px;">
    <div class="col-md-4 offset-4 reset-pass-header">
        <h3>Reset password</h3>
    </div>

    <div class="col-md-4 offset-4 p-5 reset-pass-content">
        <form asp-action="ResetPasswordByUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password"asp-for="Password" class=" form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top:25px;">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input type="password" asp-for="ConfirmPassword" class=" form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top:15px;">
                <input type="submit" class="btn btn-outline-success float-end" asp-action="ResetPasswordByUser" value="Reset"/>
                <a class="btn btn-outline-secondary" asp-action="GetAllTickets" asp-controller="UserTicket">Cancel</a>
            </div>

        </form>
        

    </div>
</div>